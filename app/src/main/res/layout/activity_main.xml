<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/MyRelativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="1"
        android:id="@+id/button"
        android:layout_marginTop="240dp"
        android:layout_alignParentTop="true"
        android:nestedScrollingEnabled="false"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="4"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="7"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="2"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="5"
        android:id="@+id/button5"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="8"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="3"
        android:id="@+id/button7"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="6"
        android:id="@+id/button8"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="9"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/button10"
        android:layout_above="@+id/button8"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/button11"
        android:layout_below="@+id/button10"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="*"
        android:id="@+id/button12"
        android:layout_alignBottom="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/button14"
        android:layout_below="@+id/button3"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6"
        android:onClick="onClick1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="="
        android:id="@+id/button15"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_toLeftOf="@+id/button12"
        android:layout_toStartOf="@+id/button12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="c"
        android:id="@+id/button16"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="18dp"
        android:onClick="clear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="/"
        android:id="@+id/button13"
        android:layout_alignBottom="@+id/button15"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:onClick="onClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_above="@+id/button16"
        android:layout_alignLeft="@+id/button16"
        android:layout_alignStart="@+id/button16"
        android:layout_marginBottom="21dp"
        android:layout_alignRight="@+id/button10"
        android:layout_alignEnd="@+id/button10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="21dp"
        android:layout_alignRight="@+id/button10"
        android:layout_alignEnd="@+id/button10" />


</RelativeLayout>
